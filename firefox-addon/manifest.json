{
  "manifest_version": 2,
  "name": "Save timelines in your blog",
  "description": "This extension saves timelines for your blog",
  "version": "1.0.1",

  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png"
    },
    "default_title": "我的timeline",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png"
  },
  "permissions": [
    "activeTab",
    "notifications",
    "contextMenus", "cookies", "tabs"
  ],
  "commands": {
    "saveCurrentTab": {
      "suggested_key": {
        "default": "Alt+Q",
        "mac": "Alt+Y"
      },
      "description": "设置当前tab保存的快捷键"
    },
    "saveAllTabs": {
      "suggested_key": {
        "default": "Alt+W",
        "mac": "Alt+W"
      },
      "description": "设置全部tab保存的快捷键"
    }
  },
  "background": {
    "scripts": ["js/jquery-3.2.1.min.js", "js/av.js", "js/data_persistent.js", "js/backgroundjs.js"]
  },
  "content_scripts": [{
    "js": ["js/jquery-3.2.1.min.js", "js/av.js", "js/data_persistent.js", "js/backgroundjs.js"],
    "matches": ["http://*/*", "https://*/*"]
  }]
}
